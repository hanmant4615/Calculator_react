{
    "extends": "stylelint-config-standard",
    "rules": {
        "no-empty-source": true,
        "block-no-empty": true,
        "declaration-no-empty": true,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "include",
                    "extend"
                ]
            }
        ]
    }
}